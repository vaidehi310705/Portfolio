<!-- Add these custom shadows to your tailwind config or use inline styles -->
<style>
  .shadow-neumorph {
    box-shadow:
      5px 5px 10px #0a0a0a,
      -5px -5px 10px #171717;
  }
  .shadow-neumorph-glow {
    box-shadow:
      0 0 15px 4px rgba(0,255,255,0.3),
      inset 0 0 10px rgba(255,255,255,0.1);
  }

  @keyframes float {
    0%, 100% {
      transform: translateY(0);
    }
    50% {
      transform: translateY(-10px);
    }
  }
  .animate-float {
    animation: float 3s ease-in-out infinite;
  }
  .hover\:shadow-glow:hover {
    box-shadow: 0 0 20px rgba(255,255,255,0.8), 0 0 40px rgba(192,192,192,0.6);
  }

  @keyframes fade-in {
    0% { opacity: 0; transform: translateY(20px); }
    100% { opacity: 1; transform: translateY(0); }
  }
  .animate-fade-in {
    animation: fade-in 0.8s ease forwards;
  }

  @keyframes fadeSlideUp {
    0% {
      opacity: 0;
      transform: translateY(30px);
    }
    100% {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .animate-fade-slide-up {
    animation: fadeSlideUp 0.8s ease forwards;
  }

  .skill-expand-enter {
    opacity: 0;
    transform: scale(0.9);
  }
  .skill-expand-active {
    opacity: 1;
    transform: scale(1);
    transition: all 0.5s ease-in-out;
  }
  .skill-expand-exit {
    opacity: 0;
    transform: scale(0.9);
    transition: all 0.5s ease-in-out;
  }
</style>

    
